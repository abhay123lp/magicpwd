<?xml version="1.0" encoding="UTF-8"?>
<magicpwd>
    <!--魔方密码工具栏-->
    <toolbar id="mgtd">
        <item id="append" type="normal" text="$P30F6703" text-def="新增" tips="$P30F6704" tips-def="新增记录">
            <icon>
                <default id="append" path="var:mwiz-add"/>
            </icon>
            <action id="append" class="com.magicpwd.e.mgtd.NewAction">
                <stroke key="^ N" />
            </action>
        </item>
        <item id="update" type="normal" text="$P30F6705" text-def="编辑" tips="$P30F6706" tips-def="编辑选择的记录">
            <icon>
                <default id="update" path="var:mwiz-edit"/>
            </icon>
            <action id="update" class="com.magicpwd.e.mgtd.UpdateAction">
                <stroke key="^ E" />
            </action>
        </item>
        <item id="delete" type="normal" text="$P30F6707" text-def="删除" tips="$P30F6708" tips-def="删除选择的记录">
            <icon>
                <default id="delete" path="var:mwiz-delete"/>
            </icon>
            <action id="delete" class="com.magicpwd.e.mgtd.DeleteAction">
                <stroke key="^ D" />
            </action>
        </item>
    </toolbar>
    <popmenu id="grid">
        <item id="append" type="normal" text="新增(@N)" text-def="新增(@N)" tips="$P30F6704" tips-def="新增记录">
            <action id="append" class="com.magicpwd.e.mgtd.NewAction" />
        </item>
        <item id="update" type="normal" text="编辑(@E)" text-def="编辑(@E)" tips="$P30F6706" tips-def="编辑选择的记录">
            <action id="update" class="com.magicpwd.e.mgtd.UpdateAction" />
        </item>
        <item id="delete" type="normal" text="删除(@D)" text-def="删除(@D)" tips="$P30F6708" tips-def="删除选择的记录">
            <action id="delete" class="com.magicpwd.e.mgtd.DeleteAction" />
        </item>
    </popmenu>
    <strokes id="mgtd">
        <action id="file-search" class="com.magicpwd.e.mgtd.FindAction">
            <stroke key="^ F" />
        </action>
        <action id="exit-window" class="com.magicpwd.e.mgtd.ExitAction">
            <stroke key="^ Q" />
        </action>
        <action id="lock-window" class="com.magicpwd.e.mgtd.LockAction">
            <stroke key="^ L" />
        </action>
        <action id="hide-window" class="com.magicpwd.e.mgtd.HideAction">
            <stroke key="^ Enter" />
            <stroke key="^ H" />
        </action>
        <action id="show-mpro" class="com.magicpwd.e.tray.MproAction">
            <stroke key="^ # P" />
        </action>
        <action id="show-mwiz" class="com.magicpwd.e.tray.MwizAction">
            <stroke key="^ # W" />
        </action>
        <action id="show-mwiz" class="com.magicpwd.e.tray.MpadAction">
            <stroke key="^ # N" />
        </action>
    </strokes>
</magicpwd>